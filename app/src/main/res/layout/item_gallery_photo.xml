<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#40FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:alpha="0.9">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Memory Photo -->
        <ImageView
            android:id="@+id/iv_memory_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/memory_photo" />

        <!-- Photo Info Overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80000000"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_memory_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_memory_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/white_80"
                android:textSize="12sp" />

            <!-- Music Indicator -->
            <TextView
                android:id="@+id/tv_music_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/icon_music"
                android:textColor="@color/accent_color"
                android:textSize="16sp"
                android:visibility="gone"
                app:drawableStartCompat="@null" />
        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>
