<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_viewer_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Main Photo View -->
    <ImageView
        android:id="@+id/iv_photo_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:contentDescription="@string/memory_photo" />

    <!-- Top Controls -->
    <LinearLayout
        android:id="@+id/ll_top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/gradient_top"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btn_close_viewer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/back_icon"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_photo_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/btn_delete_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/delete_icon"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Bottom Controls (Simplified) -->
    <LinearLayout
        android:id="@+id/ll_bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/gradient_bottom"
        android:baselineAligned="false"
        android:gravity="center_vertical">

        <!-- Memory Details Container -->
        <LinearLayout
            android:id="@+id/ll_memory_details_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_photo_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_photo_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/white_80"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_photo_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/white_80"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Music Playback Controls -->
        <LinearLayout
            android:id="@+id/ll_music_playback_controls_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_play_music_viewer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/play_icon"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btn_pause_music_viewer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/pause_icon"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
