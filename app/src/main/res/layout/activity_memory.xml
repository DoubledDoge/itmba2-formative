<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memory_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MemoryActivity">

    <!-- Background overlay -->
    <View
        android:id="@+id/overlay_memory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_color" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <!-- Replace MaterialToolbar with Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_memory"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Back Button -->
                <TextView
                    android:id="@+id/tv_back_home"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/back_icon"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:contentDescription="@string/back_to_home" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/memories_feature"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp">

            <!-- Replace MaterialCardView with CardView -->
            <!-- Photo Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_photo_section"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:alpha="0.9">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Photo Placeholder -->
                    <LinearLayout
                        android:id="@+id/ll_photo_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_camera"
                            android:textSize="48sp"
                            android:textColor="@color/white"
                            android:alpha="0.7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_photo"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:alpha="0.7"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                    <!-- Selected Photo Container -->
                    <LinearLayout
                        android:id="@+id/ll_selected_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_memory_photo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/memory_photo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:padding="8dp"
                            android:background="#40000000">

                            <TextView
                                android:id="@+id/btn_remove_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="@string/remove_photo"
                                android:textColor="@color/white"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Memory Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:alpha="0.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/memory_details"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Title Input -->
                    <EditText
                        android:id="@+id/et_memory_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/memory_title"
                        android:autofillHints="title"
                        android:inputType="text"
                        android:maxLength="100"
                        android:background="@drawable/edit_text_border"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_80" />

                    <!-- Description Input -->
                    <EditText
                        android:id="@+id/et_memory_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/memory_description"
                        android:autofillHints="description"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:maxLength="500"
                        android:background="@drawable/edit_text_border"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white_80" />

                    <!-- Location Input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/et_memory_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="@string/location"
                            android:autofillHints="location"
                            android:inputType="text"
                            android:maxLength="150"
                            android:background="@drawable/edit_text_border"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white_80" />

                        <TextView
                            android:id="@+id/btn_current_location"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/icon_map"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:contentDescription="@string/use_current_location" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Music Section Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:alpha="0.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/memory_soundtrack"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="@string/icon_music"
                            android:textSize="20sp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Music Track Selection -->
                    <LinearLayout
                        android:id="@+id/ll_music_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="@string/icon_music2"
                            android:textSize="36sp"
                            android:gravity="center"
                            android:alpha="0.7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/add_track"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:alpha="0.9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/choose_library"
                            android:textColor="@color/white_80"
                            android:textSize="14sp"
                            android:alpha="0.8" />

                    </LinearLayout>

                    <!-- Selected Music Track (Hidden initially) -->
                    <LinearLayout
                        android:id="@+id/ll_selected_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:padding="16dp">

                        <!-- Album Art Placeholder -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/iv_album_art"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="@color/primary_color"
                                android:contentDescription="@string/album_art" />

                        </androidx.cardview.widget.CardView>

                        <!-- Track Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_track_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/track_title"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:id="@+id/tv_track_artist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="sans-serif"
                                android:text="@string/artist_name"
                                android:textColor="@color/white_80"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <!-- Remove Track Button -->
                        <TextView
                            android:id="@+id/btn_remove_track"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/remove_track_icon"
                            android:textSize="16sp"
                            android:textColor="@color/white_80"
                            android:gravity="center"
                            android:contentDescription="@string/remove_track" />

                    </LinearLayout>

                    <!-- Music Controls  -->
                    <LinearLayout
                        android:id="@+id/ll_music_controls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_music_play"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/play_icon"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/play_music" />

                        <TextView
                            android:id="@+id/tv_music_pause"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/pause_icon"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"
                            android:contentDescription="@string/pause_music" />

                        <TextView
                            android:id="@+id/btn_music_stop"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="@string/stop_music_icon"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/stop_music" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_save_draft"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_button_transparent"
                    android:text="@string/save_draft"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btn_create_memory"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_button"
                    android:text="@string/create"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>